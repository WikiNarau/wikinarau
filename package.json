{
	"name": "wikinarau",
	"version": "0.1.0",
	"type": "module",
	"author": "Benjamin Vincent Schulenburg <bennyschulenburg@gmx.de>",
	"license": "EUPL-1.2",
	"scripts": {
		"dev": "NODE_ENV=development tsx --watch --watch-path=./src/backend/ ./src/backend/index.ts",
		"check": "tsc -p ./tsconfig.json --noEmit",
		"format": "npx @biomejs/biome format --write ./src",
		"preview:frontend": "vite preview",
		"build": "tsc && vite build",
		"start": "tsx ./src/backend/index.ts",
		"prepare": "husky || true"
	},
	"dependencies": {
		"@lit/context": "latest",
		"@orama/orama": "latest",
		"@shoelace-style/shoelace": "latest",
		"dotenv": "latest",
		"better-sqlite3": "latest",
		"cookie-parser": "latest",
		"express": "latest",
		"lit": "latest",
		"smol-toml": "latest",
		"tsx": "latest",
		"ws": "latest"
	},
	"devDependencies": {
		"@biomejs/biome": "latest",
		"@types/better-sqlite3": "latest",
		"@types/cookie-parser": "latest",
		"@types/express": "latest",
		"@types/node": "latest",
		"@types/ws": "latest",
		"husky": "latest",
		"typescript": "latest",
		"vite": "latest"
	}
}
